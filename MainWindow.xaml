<Window x:Class="CustomRPC.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Custom Discord Rich Presence Manager" 
        Height="618" 
        Width="1000"
        MinHeight="600"
        MinWidth="800"
        Background="#0D1117"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Window.Resources>
   
        <SolidColorBrush x:Key="PrimaryBrush" Color="#5865F2"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#4752C4"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#43B581"/>
        <SolidColorBrush x:Key="SuccessHoverBrush" Color="#4FCC8F"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#ED4245"/>
        <SolidColorBrush x:Key="ErrorHoverBrush" Color="#F04747"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0D1117"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#161B22"/>
        <SolidColorBrush x:Key="CardBrush" Color="#21262D"/>
        <SolidColorBrush x:Key="SidebarBrush" Color="#0D1117"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#30363D"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F0F6FC"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#8B949E"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="#6E7681"/>
        

        <DropShadowEffect x:Key="CardShadow" 
                         Color="Black" 
                         BlurRadius="12" 
                         ShadowDepth="4" 
                         Opacity="0.2"/>
        

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="16" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3C45A5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SuccessHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ErrorButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ErrorHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        

        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="16"
                                Padding="{TemplateBinding Padding}"
                                Margin="8,2">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource CardBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="16">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Padding="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource TextMutedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="16">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton" 
                                            Grid.Column="2" 
                                            Focusable="false" 
                                            IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" 
                                            ClickMode="Press"
                                            Background="Transparent"
                                            BorderThickness="0">
                                    <Path x:Name="Arrow" 
                                        Fill="{StaticResource TextSecondaryBrush}" 
                                        HorizontalAlignment="Right" 
                                        Margin="0,0,12,0" 
                                        VerticalAlignment="Center" 
                                        Data="M 0 0 L 4 4 L 8 0 Z"/>
                                </ToggleButton>
                                <ContentPresenter x:Name="ContentSite" 
                                                IsHitTestVisible="False" 
                                                Content="{TemplateBinding SelectionBoxItem}" 
                                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" 
                                                ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" 
                                                Margin="{TemplateBinding Padding}" 
                                                VerticalAlignment="Center" 
                                                HorizontalAlignment="Left"/>
                                <Popup x:Name="Popup" 
                                    Placement="Bottom" 
                                    IsOpen="{TemplateBinding IsDropDownOpen}" 
                                    AllowsTransparency="True" 
                                    Focusable="False" 
                                    PopupAnimation="Slide">
                                    <Grid x:Name="DropDown" 
                                        SnapsToDevicePixels="True" 
                                        MinWidth="{TemplateBinding ActualWidth}" 
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                        <Border x:Name="DropDownBorder" 
                                            Background="{StaticResource CardBrush}" 
                                            BorderBrush="{StaticResource BorderBrush}" 
                                            BorderThickness="1" 
                                            CornerRadius="16"
                                            Margin="0,4,0,0"/>
                                        <ScrollViewer Margin="4,6,4,6" 
                                                    SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" 
                                                      KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Grid>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource TextMutedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,12"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        

        <Style x:Key="ModernRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="OuterEllipse" 
                                   Width="18" 
                                   Height="18" 
                                   Stroke="{StaticResource BorderBrush}" 
                                   StrokeThickness="2" 
                                   Fill="Transparent"
                                   Margin="0,0,12,0"/>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="OuterEllipse" Property="Stroke" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="OuterEllipse" Property="StrokeThickness" Value="3"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="OuterEllipse" Property="Stroke" Value="{StaticResource TextMutedBrush}"/>
                                <Setter TargetName="OuterEllipse" Property="StrokeThickness" Value="3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="OuterEllipse" Property="Stroke" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="OuterEllipse" Property="StrokeThickness" Value="3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        

        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Rectangle x:Name="OuterRectangle" 
                                     Width="18" 
                                     Height="18" 
                                     Stroke="{StaticResource BorderBrush}" 
                                     StrokeThickness="2" 
                                     Fill="Transparent"
                                     RadiusX="3"
                                     RadiusY="3"
                                     Margin="0,0,12,0"/>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="OuterRectangle" Property="Stroke" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="OuterRectangle" Property="StrokeThickness" Value="3"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="OuterRectangle" Property="Stroke" Value="{StaticResource TextMutedBrush}"/>
                                <Setter TargetName="OuterRectangle" Property="StrokeThickness" Value="3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="OuterRectangle" Property="Stroke" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="OuterRectangle" Property="StrokeThickness" Value="3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    

    <Border Background="{StaticResource BackgroundBrush}" 
            CornerRadius="12" 
            Effect="{StaticResource CardShadow}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            

            <Border Grid.Column="0" 
                    Background="{StaticResource SidebarBrush}" 
                    CornerRadius="12,0,0,12"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    

                    <Border Grid.Row="0" 
                            Background="{StaticResource SurfaceBrush}" 
                            CornerRadius="12,0,0,0" 
                            Padding="20,20">
                        <StackPanel>
                            <TextBlock Text="Vendy_RPC_program" 
                                      FontSize="20" 
                                      FontWeight="Bold" 
                                      Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Vendy_RPC_program" 
                                      FontSize="12" 
                                      Foreground="{StaticResource TextSecondaryBrush}" 
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                    
                   
                    <ScrollViewer Grid.Row="1" 
                                 VerticalScrollBarVisibility="Auto" 
                                 Padding="8">
                        <StackPanel>
                            <Button x:Name="ConnectionNavButton" 
                                   Content="🔗 연결" 
                                   Style="{StaticResource SidebarButton}"
                                   Click="ConnectionNavButton_Click"/>
                            <Button x:Name="PresenceNavButton" 
                                   Content="📝 활동 상태" 
                                   Style="{StaticResource SidebarButton}"
                                   Click="PresenceNavButton_Click"/>
                            <Button x:Name="ImagesNavButton" 
                                   Content="🖼️ 이미지" 
                                   Style="{StaticResource SidebarButton}"
                                   Click="ImagesNavButton_Click"/>
                            <Button x:Name="ButtonsNavButton" 
                                   Content="🔗 버튼" 
                                   Style="{StaticResource SidebarButton}"
                                   Click="ButtonsNavButton_Click"/>
                            <Button x:Name="SettingsNavButton" 
                                   Content="⚙️ 설정" 
                                   Style="{StaticResource SidebarButton}"
                                   Click="SettingsNavButton_Click"/>
                        </StackPanel>
                    </ScrollViewer>
                    
          
                    <Border Grid.Row="2" 
                            Background="{StaticResource SurfaceBrush}" 
                            CornerRadius="0,0,0,12" 
                            Padding="20,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="StatusTextBlock" 
                                          Text="연결 끊김" 
                                          Foreground="{StaticResource TextSecondaryBrush}"
                                          FontSize="12"/>
                                <TextBlock x:Name="UsernameTextBlock" 
                                          Text="" 
                                          Foreground="{StaticResource TextPrimaryBrush}"
                                          FontSize="14"
                                          FontWeight="Medium"/>
                            </StackPanel>
                            
                      
                            <StackPanel Grid.Column="1" 
                                       Orientation="Horizontal">
                                <Button Content="−" 
                                       Width="28" 
                                       Height="28" 
                                       Background="Transparent" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       BorderThickness="0"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Click="MinimizeButton_Click"/>
                                <Button Content="✕" 
                                       Width="28" 
                                       Height="28" 
                                       Background="Transparent" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       BorderThickness="0"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Margin="4,0,0,0"
                                       Click="CloseButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            
           
            <Border Grid.Column="1" 
                    Background="{StaticResource BackgroundBrush}" 
                    CornerRadius="0,12,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                   
                    <Border Grid.Row="0" 
                            Background="{StaticResource SurfaceBrush}" 
                            CornerRadius="0,12,0,0" 
                            Padding="24,20">
                        <TextBlock x:Name="ContentTitleTextBlock" 
                                  Text="Connection" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Foreground="{StaticResource TextPrimaryBrush}"/>
                    </Border>
                    
                   
                    <ScrollViewer Grid.Row="1" 
                                 VerticalScrollBarVisibility="Auto" 
                                 Padding="24">
                        <StackPanel x:Name="ContentStackPanel">
                            
                           
                            <StackPanel x:Name="ConnectionSection">
                                <TextBlock Text="Discord 연결" 
                                          Style="{StaticResource SectionTitle}"/>
                                
                                <Border Background="{StaticResource CardBrush}" 
                                       CornerRadius="16" 
                                       Padding="20" 
                                       Margin="0,0,0,16"
                                       Effect="{StaticResource CardShadow}">
                                    <StackPanel>
                                        <TextBlock Text="애플리케이션 ID" Style="{StaticResource LabelStyle}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                        <TextBox x:Name="ApplicationIdTextBox" 
                                                Style="{StaticResource ModernTextBox}"
                                                Margin="0,0,0,16"/>
                                        
                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                            <Button x:Name="ConnectButton" 
                                                   Content="🔗 연결" 
                                                   Style="{StaticResource SuccessButton}"
                                                   Margin="0,0,12,0"
                                                   Click="ConnectButton_Click"/>
                                            <Button x:Name="DisconnectButton" 
                                                   Content="❌ 연결 끊기" 
                                                   Style="{StaticResource ErrorButton}"
                                                   Margin="0,0,12,0"
                                                   Click="DisconnectButton_Click"/>
                                            <Button x:Name="UpdateButton" 
                                                   Content="🔄 활동 상태 업데이트" 
                                                   Style="{StaticResource ModernButton}"
                                                   Click="UpdateButton_Click"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            
                           
                            <StackPanel x:Name="PresenceSection" Visibility="Collapsed">
                                <TextBlock Text="활동 상태 세부사항" Style="{StaticResource SectionTitle}"/>
                                
                                <Border Background="{StaticResource CardBrush}" 
                                       CornerRadius="16" 
                                       Padding="20" 
                                       Margin="0,0,0,16"
                                       Effect="{StaticResource CardShadow}">
                                    <StackPanel>
                                        <TextBlock Text="세부사항" Style="{StaticResource LabelStyle}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                        <TextBox x:Name="DetailsTextBox" 
                                                Style="{StaticResource ModernTextBox}"
                                                Tag="게임 이름이나 활동 내용을 입력하세요"
                                                Margin="0,0,0,16"/>
                                        
                                        <TextBlock Text="상태" Style="{StaticResource LabelStyle}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                        <TextBox x:Name="StateTextBox" 
                                                Style="{StaticResource ModernTextBox}"
                                                Tag="현재 상태나 진행 상황을 입력하세요"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            
                           
                            <StackPanel x:Name="ImagesSection" Visibility="Collapsed">
                                <TextBlock Text="이미지 설정" Style="{StaticResource SectionTitle}"/>
                                
                                <Border Background="{StaticResource CardBrush}" 
                                       CornerRadius="16" 
                                       Padding="20" 
                                       Margin="0,0,0,16"
                                       Effect="{StaticResource CardShadow}">
    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                       
                                        <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                            <TextBlock Text="🖼️ 큰 이미지" Style="{StaticResource LabelStyle}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                            <TextBox x:Name="LargeImageUrlTextBox" 
                                                    Style="{StaticResource ModernTextBox}"
                                                    Tag="큰 이미지 URL (예: https://example.com/image.png)"
                                                    Margin="0,0,0,8"/>
                                            <TextBox x:Name="LargeImageTextTextBox" 
                                                    Style="{StaticResource ModernTextBox}"
                                                    Tag="큰 이미지 설명 텍스트"/>
                                        </StackPanel>
                                        
                                       
                                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                            <TextBlock Text="🖼️ 작은 이미지" Style="{StaticResource LabelStyle}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                            <TextBox x:Name="SmallImageUrlTextBox" 
                                                    Style="{StaticResource ModernTextBox}"
                                                    Tag="작은 이미지 URL (예: https://example.com/small.png)"
                                                    Margin="0,0,0,8"/>
                                            <TextBox x:Name="SmallImageTextTextBox" 
                                                    Style="{StaticResource ModernTextBox}"
                                                    Tag="작은 이미지 설명 텍스트"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </StackPanel>
                            
                            
                            
                           
                            <StackPanel x:Name="ButtonsSection" Visibility="Collapsed">
                                <TextBlock Text="버튼 설정" Style="{StaticResource SectionTitle}"/>
                                
                               
                                <Border Background="{StaticResource CardBrush}" 
                                       CornerRadius="16" 
                                       Padding="16" 
                                       Margin="0,0,0,16"
                                       Effect="{StaticResource CardShadow}">
                                    <StackPanel>
                                        <TextBlock Text="🔗 버튼 1" Style="{StaticResource LabelStyle}" FontWeight="SemiBold"/>
                                        
                                        <TextBlock Text="버튼 텍스트" Style="{StaticResource LabelStyle}" Margin="0,8,0,4"/>
                                        <TextBox x:Name="Button1TextTextBox" 
                                                Style="{StaticResource ModernTextBox}"
                                                Margin="0,0,0,8"/>
                                        
                                        <TextBlock Text="버튼 URL" Style="{StaticResource LabelStyle}" Margin="0,8,0,4"/>
                                        <TextBox x:Name="Button1UrlTextBox" 
                                                Style="{StaticResource ModernTextBox}"
                                                Tag="https://example.com"/>
                                    </StackPanel>
                                </Border>
                                
                               
                                <Border Background="{StaticResource CardBrush}" 
                                       CornerRadius="16" 
                                       Padding="16"
                                       Effect="{StaticResource CardShadow}">
                                    <StackPanel>
                                        <TextBlock Text="🔗 버튼 2" Style="{StaticResource LabelStyle}" FontWeight="SemiBold"/>
                                        
                                        <TextBlock Text="버튼 텍스트" Style="{StaticResource LabelStyle}" Margin="0,8,0,4"/>
                                        <TextBox x:Name="Button2TextTextBox" 
                                                Style="{StaticResource ModernTextBox}"
                                                Margin="0,0,0,8"/>
                                        
                                        <TextBlock Text="버튼 URL" Style="{StaticResource LabelStyle}" Margin="0,8,0,4"/>
                                        <TextBox x:Name="Button2UrlTextBox" 
                                                Style="{StaticResource ModernTextBox}"
                                                Tag="https://example.com"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            
                            
                            <StackPanel x:Name="SettingsSection" Visibility="Collapsed">
                                <TextBlock Text="설정" Style="{StaticResource SectionTitle}"/>
                                
                                <Border Background="{StaticResource CardBrush}" 
                                       CornerRadius="16" 
                                       Padding="20" 
                                       Margin="0,0,0,16"
                                       Effect="{StaticResource CardShadow}">
                                    <StackPanel>
                                        <TextBlock Text="백그라운드 실행 설정" Style="{StaticResource LabelStyle}" FontWeight="SemiBold" Margin="0,0,0,16"/>
                                        
                                        <RadioButton x:Name="BackgroundOnRadio" 
                                                    Content="백그라운드에서 실행 (창 닫아도 계속 실행)" 
                                                    Style="{StaticResource ModernRadioButton}"
                                                    GroupName="BackgroundMode"
                                                    IsChecked="True"/>
                                        
                                        <RadioButton x:Name="BackgroundOffRadio" 
                                                    Content="일반 모드 (창 닫으면 종료)" 
                                                    Style="{StaticResource ModernRadioButton}"
                                                    GroupName="BackgroundMode"/>
                                        
                                        <TextBlock Text="시작 설정" Style="{StaticResource LabelStyle}" FontWeight="SemiBold" Margin="0,16,0,8"/>
                                        
                                        <CheckBox x:Name="StartMinimizedCheckBox" 
